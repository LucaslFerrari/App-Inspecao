server {
    listen 80;
    # Substitua pelo domínio ou IP público
    server_name 192.168.0.206;

    # Caminho absoluto para a pasta "dist" gerada pelo build
    root /caminho/para/projeto/dist;
    index index.html;

    # SPA: devolve index.html para rotas de frontend
    location / {
        try_files $uri $uri/ /index.html;
    }

    # Proxy para a API (Node/Express rodando em 127.0.0.1:3500)
    location /api {
        proxy_pass http://127.0.0.1:3500;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }

    # Proxy para arquivos de upload servidos pelo Node
    location /uploads {
        proxy_pass http://127.0.0.1:3500;
    }

    # Cache simples para assets estáticos
    location ~* \.(js|css|png|jpg|jpeg|gif|svg|ico|woff2?)$ {
        expires 7d;
        add_header Cache-Control "public, max-age=604800, immutable";
        try_files $uri $uri/ =404;
    }
}
